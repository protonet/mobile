<output class="content">
  <h2>Files: <output class="address-bar"><%= params[:path] || "/" %></output></h2>
  
  <div class="table-wrapper">
    <table class="file-list">
      <thead>
        <tr>
          <th class="file-name">Name</th>
          <th class="file-modified">Last Modified</th>
          <th class="file-size">Size</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
    <output class="file-details"></output>
  </div>
</output>

<script type="protonet/template" id="file-item-template">
  <%= render :partial => 'file' %>
</script>
<script type="protonet/template" id="folder-item-template">
  <%= render :partial => 'folder' %>
</script>
<script type="protonet/template" id="file-details-template">
  <%= render :partial => 'file_details' %>
</script>