<h2>Preferences</h2>
<div id="preferences" style="float:left;">
  <form id="preferences-search" action="/preferences/search">
    <fieldset>
      <input type="text" value="<%= params[:description] %>" name="description" title="search for preferences ..."/>
    </fieldset>
  </form>
  
  <ul>
    <%- @preferences.each do |p| -%>
      <li>
        <%= "#{p[:name]}" %>
      </li>
    <%- end -%>
  </ul>
</div>
<div id="preferences-details">
  <% @network_interfaces.each do |interface| %>
    <% name = interface.keys.first %>
    INTERFACE NAME:<br />
    <%= name %><br />
    IPv4:<br />
    <%= interface[name]["inet addr"] %><br />
    IPv6:<br />
    <%= interface[name]["inet6 addr"] %><br />
  <% end %>
</div>
