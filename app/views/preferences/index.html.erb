<style>
#preferences-page h3 {
  font-size: 1.4em;
  font-weight: bold;
  margin: 0 0 0.5em;
}
#preferences-page {
  background: rgb(247, 247, 247);
  border: 1px solid rgb(212, 212, 212);
  padding: 10px;
  width:  350px;
  float: left;
}
#preferences-page li {
  -moz-border-radius: 0.5em;
  -webkit-border-radius: 0.5em;
  background: rgb(255, 255, 255) url(/images/bkg_message.png) repeat-x scroll left bottom;
  border-radius: 0.5em;
  border: 1px solid rgba(0, 0, 0, 0.5);
  color: rgb(0, 0, 0);
  font-size: 1.4em;
  font-weight: bold;
  margin: 0 0 0.5em;
  padding: 1em 0.6em;
  text-decoration: none;
  cursor: pointer;
}
#preferences-page li.clicked {
  background: none;
}
#preferences-page li span {
  color: rgba(0, 0, 0, 0.5);
  font-weight: normal;
}
#preferences-page .control {
  float: right;
}

#preferences-page a {
  background: url(/images/spr_on_off.png) no-repeat;
  display: inline-block;
  height: 31px;
  margin: 0 0 0 0.5em;
  position :relative;
  text-indent: -500em;
  top: -5px;
  width: 82px;
}
#preferences-page a.off {
  background-position: 0 0;
}
#preferences-page a.on {
  background-position: 0 -31px;
}
#preferences-search {
  margin-bottom: 1em;
}
#preferences-search input {
  border: 1px solid rgba(0, 0, 0, 0.4);
  float: left;
  width: 341px;
}
#preferences-details {
  background: rgb(247, 247, 247);
  border: 1px solid rgb(212, 212, 212);
  padding: 10px;
  margin-left: 20px;
  width: 480px;
  float:left;
}
</style>

<section class="main sub">
  <h2>Preferences</h2>
  <div id="preferences-page">
    <!-- <form id="preferences-search" action="/preferences/search">
      <fieldset>
        <input type="text" value="<%= params[:description] %>" name="description" title="search for preferences ..."/>
      </fieldset>
    </form> -->
  
    <ul>
      <%- @preferences.each do |p| -%>
        <li id ="<%= p[:url] %>">
          <%= p[:name] %>
        </li>
      <%- end -%>
    </ul>
  </div>
  <output id="preferences-details"></output>
</section>