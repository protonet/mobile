<h2>Web Publishing</h2>
<div class="status-box publish-to-web">
  <%= @nofetch = true; render :partial => 'preferences/publish_to_web/status' %>
</div>

<p>Make your node available to the entire world not just your local network.</p>

<h3>Settings</h3>
<%- if incoming_interface == "published_to_web" %>
  <p class="info-message">
    <strong>Please note:</strong> You are currently connected via <i>Web Publishing</i>. If you now shutdown or rename it, you will lose your connection.</strong>
  </p>
<%- end %>
<%= form_tag preferences_publish_to_web_update_path, { :remote => true, 'data-type' => 'html', :class => 'publish-to-web' } do -%>
  <%= hidden_field_tag(:section, 'publish_to_web') %>
  <div class="form-field">
    <%= label_tag 'preferences[publish_to_web_name]', 'URL:' %>
    https:// <%= text_field_tag 'preferences[publish_to_web_name]', SystemPreferences.publish_to_web_name, :maxlength => 32 %>.protonet.info <a title="This is your node's external web address. Feel free to change it." data-hover-hint="top" class="hint">(?)</a>
  </div>
  <div class="form-field">
    <%= label_tag 'preferences[publish_to_web]', 'Status:' %>
    <span>
      <label>
        <input type="radio" name="preferences[publish_to_web]" value="true" <%= "checked" if SystemPreferences.publish_to_web %>>
        On
      </label>
      <label>
        <input type="radio" name="preferences[publish_to_web]" value="false" <%= "checked" unless SystemPreferences.publish_to_web %>>
        Off
      </label>
    </span>
  </div>
  <%= button "Save" %>
<%- end -%>

<h3>Invite people</h3>
<p>You can easily <%= link_to "invite people", new_invitation_path, :class => 'promotion-link' %> to collaborate with you.</p>
