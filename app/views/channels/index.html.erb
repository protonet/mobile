<section id="main" class="channelslist">
  <form action="/channels/search" class="search">
    <fieldset>
      <input id="channels-search" type="text" value="<%= params[:description] %>" name="description" title="search for interesting channels…"/>
    </fieldset>
  </form>
	
  <ul class="channel-list">
    <% @networks.each do |n| %>
    <li class="network" id="network-<%= n.id %>">
      <p><%= n.name %></p>
      <ul>
        <%- n.channels.each do |c| -%>
          <li id="channel-<%= c.id %>" class="channel">
            <% if current_user.subscribed?(c) %>
              <img src="/images/bullet_green.png" width="16" height="16" alt="" class="channel-indicator" />
            <% end %>
            <%= "#{h c.name} <span>(#{h c.description})</span>" %>
         </li>
       <%- end -%>
      </ul>
    </li>
    <% end %>
  </ul>

<% if false %>
  <%= link_to 'create a channel', "#", :class => "create", :rel => "create" %>
<% end %>

	<div id="create-channel">
	  <h3>Create a channel</h3>
	    <%- form_for :channel, :url => channels_path, :action => 'post' do |f| -%>
	      <fieldset>
	        <%= f.text_field :name, { :title => 'Name of the channel…' } %>
	        <%= f.text_field :description, { :title => 'Description of the channel…' } %>
	        <%= button 'Create' %>
	      </fieldset>
	    <%- end -%>
	</div>
</section>


<aside id="side" class="channelslist">
	channel details...
</aside>

