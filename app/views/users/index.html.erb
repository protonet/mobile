<h2>Users</h2>

<ul class="users options">
  <%- @users.each do |u| -%>
    <li>
      <div id="index-<%= u.id %>" class="index section">
        <%= "#{h u.display_name}" %>
        <span class="control">
          <%- if current_user.id == u.id -%>
            <span class="edit"><%= link_to 'edit', "#", :rel => "edit-#{u.id}" %> | </span>
          <%- end -%>
          <span class="show"><%= link_to 'show', "#", :rel => "show-#{u.id}" %></span>
        </span>
      </div>

      <div id="edit-<%= u.id %>" class="edit section hidden">
        <% form_for :user, :url => { :action => 'update' } do |f| -%>
          <fieldset>
            <%= f.hidden_field :id, { :value => u.id, :id => "user-id-#{u.id}" } %>
            <%= f.text_field :display_name, { :value => u.display_name, :id => "user-display-name-#{u.id}" } %>
            <%= f.text_field :email, { :value => u.email, :id => "user-display-name-#{u.id}" } %>
            <%#= f.text_field :description, { :value => u.description, :title => 'add an descriptionâ€¦', :id => "channel-description-#{u.id}" } %>
            <%= button 'Save' %>
          </fieldset>
        <% end %>
      </div>

      <div id="show-<%= u.id %>" class="show section hidden">
        <dl>
          <dt>Avatar</dt>
          <dd>
            <%= image_tag u.active_avatar_url %>
          </dd>

          <dt>EMail</dt>
          <dd><%= u.email %></dd>

          <dt>Account created</dt>
          <dd><%= u.created_at %></dd>
        </dl>
      </div>
    </li>
  <%- end -%>
</ul>