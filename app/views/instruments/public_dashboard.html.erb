<%- form_for :tweet, :url => tweets_path, :html => { :id => "message-form" } do |f| -%>
  <fieldset>
    <%= f.label(:message, "enter your message") %>
    <%= f.text_area(:message, :id => "message", :title => "enter your message") %>
    <%= f.hidden_field('audience_id', :id => "message_audience_id", :name => 'message_audience_id', :value => @active_audience.id) %>
    <%= f.hidden_field(:socket_id) %>
  </fieldset>
  <button type="submit" name="commit">
    <span>
      <em>submit</em>
    </span>
  </button>
<%- end -%>

<div id="audience">
  <ul>
    <% @audiences.each_with_index do |a, index| %>
      <li id="audience-<%= a.id %>" class="audience <%= 'active' if a == @active_audience %>">
        <%= link_to a.name.capitalize, {:audience_id => a.id, :index => index}, {:title => a.description} %>
      </li>
    <% end %>
    <li class="add">
      <a href="#" title="">new room</a>
    </li>
  </ul>
</div>
<div id="feed-viewer">
  <div id="feed-holder" style="width:<%= @audiences.size * 610 %>px; left: <%= @audiences.index(@active_audience) * -604 %>px;">
      <% @audiences.each do |a| %>
        <%= render :partial => '/tweets/tweet_list', :locals => {:tweets => a.tweets.recent, :audience => a} %>
      <% end %>
  </div>
</div>

