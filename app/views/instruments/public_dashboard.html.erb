<section id="main">
  <%- unless current_user.stranger? -%>
    <p class="greet-user">
      <%= "#{greet_user(current_user.display_name)}: #{link_to("logout", :controller => :sessions, :action => :destroy)}" %>
    </p>
  <%- end -%>
  <% message_hint = current_user.stranger? ? 'welcome stranger! talk to us...' : "go ahead @#{current_user.display_name}, I'm all yours..." %>
  <%- form_for :tweet, :url => tweets_path, :html => { :id => "message-form" } do |f| -%>
    <fieldset>
      <%= f.hidden_field("channel_id", :name => "message_channel_id", :value => @active_channel.id, :autocomplete => "off") %>
      <%= f.hidden_field(:socket_id) %>
      <%= f.hidden_field(:text_extension, :id => 'text-extension-input', :value => "", :autocomplete => "off") %>
      <%= f.text_area(:message, :id => 'message', :title => message_hint) %>
    </fieldset>
    <div id="text-extension-preview">
      <a href="#" title="Remove" class="remove">x</a>
    </div>
    <button type="submit" name="commit">submit</button>
  <%- end -%>
  <div id="channels">
    <ul>
      <%- @channels.each_with_index do |c, index| -%>
        <li id="channel-<%= c.id %>" <%= active(c, @active_channel) %>>
          <%= link_to c.name.capitalize, { :channel_id => c.id, :index => index }, { :title => c.description } %>
        </li>
      <%- end -%>
    </ul>
    <%= link_to "manage channels", "/channels", :class => "manage-channels" %>
  </div>
  <div id="feed-viewer">
    <div id="feed-holder" style="width:<%= @channels.size * 650 %>px; left: <%= @channels.index(@active_channel) * -650 %>px;">
      <%- @channels.each do |c| -%>
        <%= render :partial => '/tweets/meep_list', :locals => { :tweets => Tweet.find_tweets_older_than(c, Tweet.last.id + 1), :channel => c } %>
      <%- end -%>
    </div>
  </div>
</section>

