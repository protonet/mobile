<%- form_for :tweet, :url => tweets_path, :html => { :id => "message-form" } do |f| -%>
  <fieldset>
    <%= f.label(:message, "enter your message") %>
    <%= f.text_area(:message, :id => "message", :title => "enter your message", :value => "@@#{@active_audience.name} ") %>
    <%= f.hidden_field('audience_ids[]', :id => "audience_ids[0]", :name => 'audience_ids[]', :value => @active_audience.id) %>
  </fieldset>
  <button type="submit" name="commit">
    <span>
      <em>submit</em>
    </span>
  </button>
<%- end -%>

<div id="audience">
  <ul>
    <% @audiences.each do |a| %>
      <li id="audience-<%= a.id %>" class="<%= 'active' if a == @active_audience %>">
        <%= link_to a.name.capitalize, {:audience_id => a.id}, {:title => a.description} %>
      </li>
    <% end %>
    <li class="add">
      <a href="#" title="">new room</a>
    </li>
  </ul>
</div>
<div id="feed-viewer">
  <div id="feed-holder">
    <ul id="user-messages">
      <%= render :partial => '/tweets/tweet_list' %>
    </ul>
  </div>
</div>

