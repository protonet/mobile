<aside>
  <ul>
    <%- if permitted_to?(:read, :users)  %>
    <li class="<%= 'selected' if @nav == "users" %>">
      <a href="<%= users_path %>">
        <strong><%= t("users.nav_all_users") %> (<%= User.registered.size%>)</strong>
      </a>
    </li>
    <%- end %>
    <li class="<%= 'selected' if @nav == "my_profile" %>">
      <a href="<%= my_profile_path %>">
        <strong><%= t("users.nav_my_profile") %></strong>
      </a>
    </li>
    <%- if permitted_to?(:manage, :invitations)  %>
    <li class="<%= 'selected' if @nav == "invitations" %>">
      <a href="<%= invitations_path %>">
        <strong><%= t("users.nav_invitations") %></strong>
      </a>
    </li>
    <%- end %>
  </ul>
</aside>