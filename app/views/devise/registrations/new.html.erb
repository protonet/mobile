<%= form_for :user, :url => user_registration_path, :html => { :class => "register" } do |f| %>
   <%= hidden_field_tag :invitation_token, params[:invitation_token] if params[:invitation_token] %>
   <fieldset>
     <h3>
       <%- if @invitation %>
         You have been invited by <%= @invitation.user.display_name %>. Just create an account. It's free
       <%- else %>
         Create an account. It's free.
       <%- end %>
     </h3>
     <label>
       <%= f.text_field :first_name, :placeholder => "first name", :value => (@user && @user.first_name)%>
       <span class="hint">first name (e.g. "John")</span>
     </label>
     <label>
       <%= f.text_field :last_name, :placeholder => "last name", :value => (@user && @user.last_name)%>
       <span class="hint">last name (e.g. "Doe")</span>
     </label>
     <label>
       <%= f.text_field :email, :placeholder => "email", :type => "email", :value => (@user && @user.email) %>
       <span class="hint">a valid email address (e.g. "john.doe@gmail.com")</span>
     </label>
     <label>
       <%= f.password_field :password, :placeholder => "password" %>
       <span class="hint">min. 8 characters</span>
     </label>
     <div>
       <%= button "Sign up", :id => "register" %> <a href="/users/sign_in" class="promotion-link" data-avoid-ajax="1">already have an account?</a>
       <p class="hint">
         Did you forget your password?
         <a href="<%= new_user_password_path %>" data-avoid-ajax="1">Reset it here</a>
       </p>
     </div>
   </fieldset>
 <%- end %>