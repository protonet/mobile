<li class="meep" tabindex="0">
  <article>
    <div class="text">#{converted_message}</div>
    <output class="text-extension-container"></output>
    <div class="author">
      #{author}
      <time datetime="#{created_at}" title="#{created_at}">#{created_at}</time>
      #{reply_from}
      #{posted_in}
    </div>
  </article>
  <div class="avatar">
    <img src="<%= image_proxy("#\{avatar\}", {:width => 36, :height => 36, :local => true, :escape => false}) %>" width="36" height="36" data-user-name="#{author}">
  </div>
</li>
