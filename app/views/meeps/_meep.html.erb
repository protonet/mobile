<li class="meep" tabindex="0">
  <article>
    <p>#{converted_message} <a href="?meep_id=#{id}" data-meep-id="#{id}" class="detail-link" title="Show detail view" tabindex="-1">&#x25CF;</a></p>
    <output class="text-extension-container"></output>
    <div class="author">
      #{author}
      <time datetime="#{created_at}" title="#{created_at}">#{created_at}</time>
      #{reply_from}
      #{posted_in}
    </div>
  </article>
  <div class="avatar">
    <img src="<%= image_proxy("#\{avatar\}", {:width => 36, :height => 36, :local => true}) %>" width="36" height="36" data-user-name="#{author}">
  </div>
</li>
