<li>
  <article>
    <p>#{converted_message}</p>
    <output class="text-extension-container"></output>
    <div class="author">
      #{author}
      <time datetime="#{created_at}" title="#{created_at}">#{created_at}</time>
      <span class="status"></span>
      #{reply_from}
      #{posted_in}
    </div>
  </article>
  <div class="avatar">
    <img src="#{avatar}" width="36" height="36" data-user-name="#{author}">
  </div>
</li>
