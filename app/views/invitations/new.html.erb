<%= form_for(@invitation, :html => { "data-protonet-remote" => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p>
    <% @channels.each do |channel| %>
    <%= check_box_tag "invitation[channel_ids][]", channel.id, false, :id => dom_id(channel, "invitation") %>
    <%= label_tag dom_id(channel, "invitation"), channel.name %>
    <br />
    <% end %>
  </p>
  <p>
    <%= f.submit 'Send invitation' %>
  </p>
<% end %>