<% if !defined?(show_wrapper_start) || show_wrapper_start -%>
<li id="<%= html_id %>">
  <span class="message-usericon">
    <img src="<%= avatar %>" width="47" height="47" alt="" />
  </span>
  <div class="message-text">
<% end %>
    <span class="message-info">
      <% if @search_results -%>
      <span class="message-channels"><%= channel_names %></span>
      <% end -%>
      <span class="message-author"><%= author %></span>
      <span class="message-date pretty-date" <%= "title=\"#{convert_to_rfc(created_at)}\"" unless created_at.blank? %>><%= created_at %></span>
    </span>
    <p><%= format_tweet(message) %></p>
<% if !defined?(show_wrapper_end) || show_wrapper_end -%>
  </div>
</li>
<% end %>