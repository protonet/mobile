<script type="protonet/template" id="channel">
  <div data-role="page" id="channel-#{id}" class="channel-page" style="height:100%">

    <div data-role="header">
      <a href="/" data-icon="arrow-l" class="ui-btn-left" data-rel="back">back</a>
      <h1>#{name}</h1>
    </div>

    <div id="scroller-#{id}" class="scroller content">
      <div >
        <ul class="timeline ui-listview" data-role="none"></ul>
      </div>
    </div>

    <div data-role="footer">
      <form action="/meeps" method="post" class="meep_form" data-ajax="false">
        <div class="field-contains">
          <textarea cols="20" rows="4" name="textarea" class="ui-body-d ui-corner-all ui-shadow-inset" data-role="none"></textarea>
          <button type="submit" name="submit" value="submit" data-theme="b">
            Submit
          </button>
        </div>
      </form>
    </div>

  </div>
</script>