<script id="data">
  var data = {
    users: <%= protonet.users.map do |user| 
      {
        :id => user.id,
        :name => user.name,
        :avatar => user.avatar,
        :subscriptions => user.subscriptions
      }
    end.to_json %>,
    channels: <%= current_user.subscribed_channels.map do |channel|
      {
        :name => channel.name,
        :id => channel.id,
        :uuid => channel.uuid,
        :description => channel.description,
        :global => channel.global,
        :rendezvous => channel.rendezvous,
        :last_read_meep => channel.last_read_meep,
        :listen_id => channel.listen_id
      }
    end.to_json %>
  };
</script>