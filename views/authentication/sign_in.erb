<div data-role="page" id="sign_in">

  <div data-role="header">
    <h1>protonet of <strong><%= node.name %></strong></h1>
  </div>

  <div data-role="content">  
    <h2>Welcome</h2>
    <% if session['captive_redirect_url'] %>
    <p class="hint">
      Your have been catched by the captive Portal. Please sign in to proceed.
    </p>
    <% end %>
    <form action="sign_in" method="post" data-ajax="false" id="login_form">
      <div class="input">
        <label for="user_login">email or login</label>
        <input type="text" name="user[login]" id="user_login" data-mini="true"  autocapitalize="off" autocorrect="off"/>
      </div>
      <div class="input">
        <label for="user_password">password</label>
        <input type="password" name="user[password]" id="user_password" data-mini="true"  autocapitalize="off" autocorrect="off"/>
      </div>
      <div class="button">
        <button type="submit" name="submit" class="ui-btn-hidden">Login</button>
      </div>

    </form>
    <p>
      If you forgot your password, you can <a href="users/password/reset">reset it here</a>.
      Switch to <a href="http://<%= request.host %>:3000?is_mobile=false">normal Version</a>.
    </p>
  </div>

</div>


</div>


