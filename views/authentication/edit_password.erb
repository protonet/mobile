<div data-role="page" id="sign_up">

  <div data-role="header" data-theme="e">
    <a href="/" data-icon="back" class="ui-btn-left" data-transition="flip">Back</a>
    <h1>Reset your Password:</h1>
  </div><!-- /header -->

  <div data-role="content" data-theme="d">  
    <form action="/sign_up" method="post">
      <input type="hidden" name="user[request_password_token] value="<%= @reset_password_token %>">
      <div class="input">
        <label for="user_password">Password</label>
        <input type="password" name="user[password]" id="user_password" data-mini="true" autocapitalize="off" autocorrect="off" />
      </div>
       <div class="input">
        <label for="user_password_confirmation">Password Confirmation</label>
        <input type="password" name="user[password_confirmation]" id="user_password_confirmation" data-mini="true" autocapitalize="off" autocorrect="off" />
      </div>
      <div class="button">
        <button type="submit" name="submit" class="ui-btn-hidden">Reset</button>
      </div>

    </form>
  </div>
  
</div>