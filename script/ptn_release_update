#!/bin/bash

export SHARED_PATH=$1
export HOME=$SHARED_PATH/../..
shift 1
. $HOME/.bashrc
. $HOME/.profile

cd $HOME/deployer
bundle check 2>&1 > /dev/null ; if [ $? -ne 0 ] ; then sh -c "bundle install --without test" ; fi
bundle exec bin/dep -r protonet -e production -m deploy -c $SHARED_PATH/config/protonet.d/deploy_config 2>&1 > /tmp/ptn_release_update
