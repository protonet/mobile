#!/bin/bash

echo "`date` starting ptn_release_update"

export SHARED_PATH=$1
export HOME=$SHARED_PATH/../..

. $HOME/.bashrc
. $HOME/.profile
. /usr/local/rvm/scripts/rvm

cd $HOME/deployer
export BUNDLE_GEMFILE=''
bundle install --without=test --gemfile=Gemfile
bundle exec bin/dep -r protonet -e production -m deploy -c $SHARED_PATH/config/protonet.d/deploy_config 2>&1 >> /tmp/ptn_release_update.log
