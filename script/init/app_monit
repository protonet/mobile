#!/bin/bash

export CURRENT_PATH=$1
export SHARED=$CURRENT_PATH/../shared
export HOME=$CURRENT_PATH/../..
shift 1
. $HOME/../.bashrc
. $HOME/../.profile
cd $SHARED
case $1 in
   start)
      monit -c system/monit_ptn_node -l log/monit.log -p pids/monit.pid
      ;;
    stop)  
      monit -c system/monit_ptn_node -l log/monit.log -p pids/monit.pid quit
      ;;
    *)  
      echo "usage: app_monit rails-app-path {start|stop}" ;;
esac
exit 0